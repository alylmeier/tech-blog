<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
 
  <p>
    
    
    <h3>Leave a Comment</h3>

    <form class="form new-project-form">
      <div class="form-group">
        
        <input class="form-input" type="text" id="comment-name" name="comment-name" />
      </div>
      <button class="btn btn-primary">Submit your Comment</button>
  </p>
  <div id="comment-space"></div>
</div>
<div>
  {{#if comments.length}}
  <div class="col-md-6 project-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{comment.name}}</h4>
      </div>
  
    {{/each}}
  </div>
  
</div>
<script src="/js/comment.js"></script>
